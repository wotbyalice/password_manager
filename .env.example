# Office Password Manager Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development
SERVER_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Option 1: PostgreSQL (Recommended for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=password_manager
DB_USER=postgres
DB_PASSWORD=your_db_password

# Option 2: Supabase (Cloud PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Option 3: Full database URL
DATABASE_URL=postgresql://username:password@host:port/database

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your-32-character-encryption-key-here
MASTER_KEY_SALT=your-master-key-salt-here
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# =============================================================================
# ADMIN USER CONFIGURATION
# =============================================================================
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=ChangeThisPassword123!

# =============================================================================
# REAL-TIME & SOCKET.IO
# =============================================================================
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
TRUST_PROXY=false
SECURE_COOKIES=false

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/password-manager.log
LOG_CONSOLE=true
LOG_SQL_QUERIES=false

# =============================================================================
# AUTO-UPDATER CONFIGURATION
# =============================================================================
GH_TOKEN=your-github-token-for-releases
GITHUB_OWNER=your-org
GITHUB_REPO=office-password-manager
UPDATE_SERVER_URL=https://api.github.com/repos/your-org/office-password-manager
UPDATE_CHECK_INTERVAL=24

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_USER_REGISTRATION=false
FEATURE_PASSWORD_SHARING=true
FEATURE_AUDIT_EXPORT=true
FEATURE_BULK_IMPORT=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=password-manager:*
DETAILED_ERRORS=true
HOT_RELOAD=true
