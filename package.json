{
  "name": "office-password-manager",
  "version": "1.0.0",
  "description": "Secure password manager for office environments with admin controls and real-time sync",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run server:dev\" \"npm run electron:dev\"",
    "server:dev": "nodemon src/server/app.js",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run build:server && npm run build:electron",
    "build:server": "echo 'Server build placeholder'",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "password-manager",
    "electron",
    "security",
    "office",
    "admin-controls"
  ],
  "author": "Office Password Manager Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "concurrently": "^8.2.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "rate-limiter-flexible": "^2.4.2",
    "winston": "^3.10.0",
    "pg": "^8.11.3",
    "electron-updater": "^6.1.4",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.office.passwordmanager",
    "productName": "Office Password Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "office-password-manager"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/main/main.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
