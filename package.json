{
  "name": "office-password-manager",
  "version": "0.6.0",
  "description": "Secure password manager for office environments with admin controls and real-time sync",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run server:dev\" \"npm run electron:dev\"",
    "server": "node src/server/server.js",
    "server:dev": "nodemon src/server/server.js",
    "electron:dev": "wait-on http://localhost:3001 && electron . --dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:server": "jest --testPathPattern=server",
    "test:integration": "jest --testPathPattern=integration",
    "setup:categories": "node src/scripts/populate-default-categories.js",
    "migrate:categories": "node src/scripts/migrate-password-categories.js",
    "build": "npm run build:server && npm run build:electron",
    "build:server": "echo 'Server build complete'",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "setup:db": "node scripts/setup-database.js",
    "test:deployment": "node scripts/test-deployment.js",
    "clean": "rimraf dist/ build/ coverage/",
    "release": "npm run test && npm run build && npm run dist",
    "deploy:test": "npm run test:deployment",
    "deploy:setup": "npm run setup:db && npm run test:deployment"
  },
  "keywords": [
    "password-manager",
    "electron",
    "security",
    "office",
    "admin-controls"
  ],
  "author": "Office Password Manager Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0"
  },
  "build": {
    "appId": "com.office.passwordmanager",
    "productName": "Office Password Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "office-password-manager"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/main/main.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
